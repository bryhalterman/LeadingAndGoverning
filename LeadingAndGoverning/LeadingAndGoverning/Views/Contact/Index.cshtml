@model LeadingAndGoverning.ViewModels.ContactViewModel
<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Contact Us</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
                {
                    <fieldset>
                        <div class="form-group">@Html.ValidationSummary()</div>
                        <div class="form-group">
                            @Html.Label("Email: ", htmlAttributes: new { @class = "col-lg-2 control-label", @placeholder = "me@example.com" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Subject: ", htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(m => m.Subject, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Subject)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Message: ", htmlAttributes: new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                @Html.TextAreaFor(m => m.Body, htmlAttributes: new { @class = "form-control", @rows = "5" })
                                @Html.ValidationMessageFor(m => m.Body)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2 pull-right">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-default">Cancel</button>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
