@model LeadingAndGoverning.ViewModels.ContactViewModel
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="banner">
                <div class="banner-inner">
                    <h1 class="banner-title">
                        Contact Us
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container-fluid pad-top-10">
                @*Scottie Container*@
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h4>F. Scottie Seawell, MPA</h4>
                            <span class="text-muted">
                                President &amp; CEO
                            </span>
                        </div>
                        <div class="panel-body">
                            <img class="center img-contactus" src="~/Content/Images/Scottie.jpg" height="274" width="217" />
                        </div>
                        <div class="panel-footer text-center">
                            <p>
                                <table class="text-left">
                                    <tr>
                                        <td>
                                            <span class="glyphicon glyphicon-envelope" />
                                        </td>
                                        <td>&nbsp;<a href="mailto:fseawell@leadingandgoverning.com">fseawell@leadingandgoverning.com</a></td>
                                    </tr>
                                    <tr>
                                        <td><span class="glyphicon glyphicon-phone-alt"></span></td>
                                        <td>&nbsp;(919) 918-7067</td>
                                    </tr>
                                    <tr>
                                        <td><span class="glyphicon glyphicon-phone"></span></td>
                                        <td>&nbsp;(919) 260-0662</td>
                                    </tr>
                                </table>
                            </p>
                        </div>
                    </div>
                </div> @*Scottie Card*@
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                    <h2>This section will have a small blurb about Scottie!</h2>
                </div> @*Scottie Blurb*@
            </div>
            <div class="container-fluid pad-top-10">
                @*Phillip Container*@
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                    <h4>This section will have a small blurb about Phillip!</h4>
                </div> @*Phillip Blurb*@
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <img class="center img-contactus" src="~/Content/Images/Phillip.jpg" height="274" width="217" />
                        </div>
                        <div class="panel-footer text-center">
                            <h4>Phillip Boyle, Ph.D.</h4>
                            <span class="text-muted">
                                Co-Founder
                            </span>
                            <table>
                                <tr>
                                    <td>
                                        <a href="mailto:pboyle@leadingandgoverning.com"><span class="glyphicon glyphicon-envelope"></span></a>
                                    </td>
                                    <td>&nbsp;</td>
                                </tr>
                                <tr>
                                    <td><span class="glyphicon glyphicon-phone-alt"></span></td>
                                    <td>(919) 918-7067</td>
                                </tr>
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div> @*Phillip Card*@
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-md-3 col-md-offset-3">

            </div>
            <div class="col-xs-10 col-xs-offset-1 col-md-3 col-md-offset-1">

            </div>
        </div>

        @using (Html.BeginForm("Index", "Contact", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
            {
            <fieldset>
                <div class="form-group">@Html.ValidationSummary()</div>
                <div class="form-group">
                    @Html.Label("Email: ", htmlAttributes: new { @class = "col-lg-2 control-label", @placeholder = "me@example.com" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Subject: ", htmlAttributes: new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Subject, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Subject)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Message: ", htmlAttributes: new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextAreaFor(m => m.Body, htmlAttributes: new { @class = "form-control", @rows = "5" })
                        @Html.ValidationMessageFor(m => m.Body)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-default">Cancel</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>